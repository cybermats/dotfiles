# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym odiaeresis resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

mode "audio" {
     # Volume
     bindsym Up exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && pkill -SIGRTMIN+10 i3blocks
     bindsym Down exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && pkill -SIGRTMIN+10 i3blocks

     # Player
     bindsym Right exec --no-startup-id playerctl next
     bindsym Left exec --no-startup-id playerctl previous
     bindsym $mod+Space exec --no-startup-id playerctl pause

     # Exit
     bindsym Return mode "default"
     bindsym Escape mode "default"
     bindsym $mod+shift+a mode "default"
}

bindsym $mod+shift+a mode "audio"

bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous


set_from_resource $main-color		i3wm.color1 #f0f0f0
set_from_resource $inactive-bg-color 	i3wm.color2 #f0f0f0
set_from_resource $inactive-text-color 	i3wm.color0 #f0f0f0
set_from_resource $active-bg-color	i3wm.color4 #f0f0f0
set_from_resource $active-text-color	i3wm.color0 #f0f0f0
set_from_resource $urgent-bg-color 	i3wm.color6 #f0f0f0
set_from_resource $urgent-text-color 	i3wm.color0 #f0f0f0
set_from_resource $indicator 		i3wm.color15 #f0f0f0



# window colors
#                       border              background         text                 indicator
client.focused		$active-bg-color    $active-bg-color   $active-text-color   $indicator
client.unfocused	$inactive-bg-color  $inactive-bg-color $inactive-text-color $indicator
client.focused_inactive	$inactive-bg-color  $inactive-bg-color $inactive-text-color $indicator
client.urgent		$urgent-bg-color    $urgent-bg-color   $urgent-text-color   $indicator


# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3blocks -c ~/.config/i3/i3blocks.conf
	font pango:System San Francisco Display 10
	colors {
		background $main-color
	    	separator $inactive-text-color
		#                  border             background         text
		focused_workspace  $active-bg-color   $active-bg-color	 $active-text-color
		inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
		urgent_workspace   $urgent-bg-color   $urgent-bg-color   $urgent-text-color
		statusline $active-text-color
	}
}



